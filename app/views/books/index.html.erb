<% flash.each do |message_type, message| %>
  <div class="notice"><% message_type %><%= message %></div>
<% end %>

<header>
  <h1 class="header">Books</h1>
</header>

<main>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
      <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", book_path(book.id), class: "black" %>
      </td>
      <td>
        <%= link_to "Edit", edit_book_path(book.id), class: "black" %>
      </td>
      <td>
        <%= link_to "Destroy", destroy_book_path(book.id), method: :delete,  data: {confirm: "Are you sure?"}, class: "black" %>
      </td>
    </tr>
      <% end %>
  </table>

<% if @book.errors.any? %>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <h2>New book</h2>
    <%= form_for(@book) do |f| %>
      <h4>Title</h4>
        <%= f.text_field :title %>
      <h4>Body</h4>
        <%= f.text_area :body %>
      <div>
         <%= f.submit %>
      </div>
    <% end %>

</main>