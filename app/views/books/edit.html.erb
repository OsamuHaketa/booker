<% flash.each do |message_type, message| %>
  <div class="notice"><% message_type %><%= message %></div>
<% end %>

<h1 class="header">Editing Books</h1>

<%= form_for(@book) do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>
  <h4>Body</h4>
    <%= f.text_area :body, class: "book_body" %>
  <div><%= f.submit %></div>
<% end %>

<%= link_to "Show", book_path(@book.id), class: "black" %>
<%= link_to "Back", books_path, class: "black" %>