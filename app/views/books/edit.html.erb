    <%= @book.errors.count %>error prohibited this book from being saved:<br>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for(@book) do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Body</h4>
    <%= f.text_area :body %>
