<h1>Books</h1>
<h3>title</h3>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <tbody>
    <% @books.each do |book| %>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show', book_path(book.id), class:"show_#{book.id}" %></td>
    <td><%= link_to "Edit", edit_book_path(book.id), class:"edit_#{book.id}" %></td>
    <td><%= link_to 'Destroy', book_path(book.id), method: :delete, data: { confirm: "Are you sure?" }, class:"destroy_#{book.id}" %></td>
    <% end %>
  </tbody>
</table>

<h1>新規投稿</h1>
<%= form_with model: @book, url: '/books', method: :post, local: true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>